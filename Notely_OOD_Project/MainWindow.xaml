<Window x:Class="Notely_OOD_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notely_OOD_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="850" MinWidth="810" Loaded="Window_Loaded">
    <DockPanel>

        <Grid DockPanel.Dock="Top">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock HorizontalAlignment="Left" Grid.Row="0" Grid.Column="3" TextAlignment="Center" TextWrapping="Wrap" Text="Welcome to Notely!" Margin ="0 20 0 0" VerticalAlignment="Top" FontFamily="UD Digi Kyokasho NP-B" FontSize="20"/>
            <Button x:Name="btnAddNote" Content="Add Note" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Left" Margin="-20 20 0 0" VerticalAlignment="Top" Width="75"  Click="btnAddNote_Click"/>
            <Button x:Name="btnPrintReport" Content="Print Report" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Right" Margin="0 20 -10 0" VerticalAlignment="Top" Width="75"  Click="btnPrintReport_Click"/>
            
        </Grid>
        <StackPanel  Margin=" 30 0 30 55" DockPanel.Dock="Right" VerticalAlignment="Bottom">
            <TextBlock HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Details" VerticalAlignment="Top" FontFamily="UD Digi Kyokasho NP-B" FontSize="16"/>
            <TextBlock HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Title:" VerticalAlignment="Top" FontFamily="UD Digi Kyokasho NP-B"/>
            <TextBox x:Name="txtBTitle" HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBlock HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Priority:" VerticalAlignment="Top" FontFamily="UD Digi Kyokasho NP-B"/>
            <ComboBox x:Name="comboPriority" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" RenderTransformOrigin="1.003,0.929" />
            <TextBlock HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Date:" VerticalAlignment="Top" FontFamily="UD Digi Kyokasho NP-B"/>
            <DatePicker x:Name="datePicker" HorizontalAlignment="Left" VerticalAlignment="Top"  Width="120"/>
            <TextBlock HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Time:" VerticalAlignment="Top" FontFamily="UD Digi Kyokasho NP-B"/>
            <TextBox x:Name="txtBTime" HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBlock HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Content:" VerticalAlignment="Top" FontFamily="UD Digi Kyokasho NP-B"/>
            <TextBox x:Name="txtBContent" HorizontalAlignment="Left" Height="90"  TextWrapping="Wrap" VerticalAlignment="Top" Width="225"/>
            
           
            <Button x:Name="btnEdit" Content="Save Changes"  Width="80"  Height="31" Click="btnEdit_Click"/>
            <Button x:Name="btnDelete" Content="Delete "  Width="80"  Height="31" Click="btnDelete_Click"/>

        </StackPanel>
        <Grid DockPanel.Dock="left" MinWidth="30">
            
        </Grid>

        <Grid DockPanel.Dock="Bottom" >
            
        </Grid>
        
    <Grid x:Name="mainGrid" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock HorizontalAlignment="Right" Grid.Row="0" Grid.Column="0"  TextWrapping="Wrap" Text="Display:" VerticalAlignment="Bottom" Margin="0 0 0 0"   FontFamily="UD Digi Kyokasho NP-B"/>
            <ComboBox x:Name="comboDisplay" Grid.Row="0" Grid.Column="1"   VerticalAlignment="Bottom" HorizontalAlignment="Center" MinWidth="55" Margin="0 0 0 0"  SelectionChanged="comboDisplay_SelectionChanged"/>
            <Button x:Name="btnChangeView" Padding="2" Grid.Row="0" Grid.Column="2" VerticalAlignment="Bottom" Content="Change View" HorizontalAlignment="Center" Click="btnChangeView_Click"   />
            <Button x:Name="btnSort" Content="Sort" Padding="2" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Width="65"  Click="btnSort_Click"/>
            <ListBox x:Name="listBxNoteBoard" Grid.Row="1" Grid.Column="1" Grid.RowSpan="5" Grid.ColumnSpan="7" HorizontalAlignment="Left" MinHeight="326" VerticalAlignment="Top" Margin="-50 0 0 0"  SelectionChanged="listBxNoteBoard_SelectionChanged"/>
    

    </Grid>
    </DockPanel>
</Window>
