<Window x:Class="Notely_OOD_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notely_OOD_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="850" Loaded="Window_Loaded">
    <Grid>

        <ListBox x:Name="listBxNoteBoard" HorizontalAlignment="Left" Height="326" VerticalAlignment="Top" Width="530" Margin="26,217,0,0" SelectionChanged="listBxNoteBoard_SelectionChanged"/>
        <Button x:Name="btnChangeView" Content="Change View" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="26,192,0,0"/>
        <Button x:Name="btnSort" Content="Sort" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="116,192,0,0"/>
        <TextBlock HorizontalAlignment="Left" Margin="311,36,0,0" TextWrapping="Wrap" Text="Welcome to Notely!" VerticalAlignment="Top" FontFamily="UD Digi Kyokasho NP-B" FontSize="20"/>
        <Button x:Name="btnAddNote" Content="Add Note" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="377,87,0,0"/>

        <Canvas x:Name="canvasDetails" HorizontalAlignment="Left" Height="326" Margin="570,217,0,0" VerticalAlignment="Top" Width="254">
            <ComboBox x:Name="comboPriority" Width="120" RenderTransformOrigin="0.508,0.5" Canvas.Left="116" Canvas.Top="66"/>


        </Canvas>
        <Button x:Name="btnEdit" Content="Save Changes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Margin="651,512,0,0" Height="31" Click="btnEdit_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="581,226,0,0" TextWrapping="Wrap" Text="Details" VerticalAlignment="Top" FontFamily="UD Digi Kyokasho NP-B" FontSize="16"/>

        <TextBlock HorizontalAlignment="Left" Margin="581,261,0,0" TextWrapping="Wrap" Text="Title:" VerticalAlignment="Top" FontFamily="UD Digi Kyokasho NP-B"/>
        <TextBlock HorizontalAlignment="Left" Margin="581,292,0,0" TextWrapping="Wrap" Text="Priority:" VerticalAlignment="Top" FontFamily="UD Digi Kyokasho NP-B"/>
        <TextBlock HorizontalAlignment="Left" Margin="581,322,0,0" TextWrapping="Wrap" Text="Date:" VerticalAlignment="Top" FontFamily="UD Digi Kyokasho NP-B"/>
        <TextBlock HorizontalAlignment="Left" Margin="581,352,0,0" TextWrapping="Wrap" Text="Time:" VerticalAlignment="Top" FontFamily="UD Digi Kyokasho NP-B"/>
        <TextBlock HorizontalAlignment="Left" Margin="581,383,0,0" TextWrapping="Wrap" Text="Content:" VerticalAlignment="Top" FontFamily="UD Digi Kyokasho NP-B"/>
        <TextBox x:Name="txtBTitle" HorizontalAlignment="Left" Height="23" Margin="686,252,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtBTime" HorizontalAlignment="Left" Height="23" Margin="686,350,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtBContent" HorizontalAlignment="Left" Height="90" Margin="581,404,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="225"/>
        <DatePicker x:Name="datePicker" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="686,316,0,0" Width="120"/>



    </Grid>
</Window>
